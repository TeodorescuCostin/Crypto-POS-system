<Eroare>

    name: "eroare"

    texterror: texterror

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        padding:0
        spacing:0

        BoxLayout:
            Label:
                id:texterror
                color: 0,0,0,1
                font_size: 50
                font_name:"exobold"
                text: "  Suma este insuficienta! \n Minimul este de 10 RON."
                pos_hint: {'center_x': 0.5}
                pos_hint: {'center_y': 0.2}
                size_hint: (.5, 1)
                canvas.before:
                    Color:
                        rgba: (75/255, 178/255, 123/255, 1)
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [30]
        BoxLayout:
            RoundedButton:
                id: termina
                font_size:70
                font_name:"exobold"
                color: 0,0,0,1
                text:"OK"
                on_press:
                    root.manager.transition.direction = "right"
                    root.restart()
                pos_hint: {'center_x': 0.5}
                pos_hint: {'center_y': 0.1}
                size_hint: (.5, .27)
                on_release: app.root.current = "wsum"

